<!-- Área de avances-->
<section class="container">
    <div class="row">
            <div class="col-12">
        <div class="contenedorAvances">
            <br>
            <p style="margin-top:1rem; margin-left:2rem; font-size: 1.5rem; text-align: left; color:#50565A;Cursor:pointer;">Mis avances y calificaciones +
            </p>
            <br>
            <table class="table tableAvances">
                <tbody class="bodyTableAvances">
                    <tr>
                        <td style="font-weight: bold;" class="col-3">Curso</td>
                        <td style="font-weight: bold;" class="col-5">Avances</td>
                        <td style="font-weight: bold;" class="col-1">Calificacion</td>
                        <td style="font-weight: bold;" class="col-3">Certificados</td>
                    </tr>
                    {{#progressuserA}}
                    <tr>
                        <td scope="row">{{{ fullname }}}</td>
                        <td>
                            <center>
                              <div class="progress-circle" data-progress="{{{ percentage }}}">
                            </center>
                        </td>
                        <td class="grade">{{{ grade }}}</td>
                        <td>
                            {{#certificate}}
                                {{#.}}
                                    <a href="{{ . }}" target="_blank">
                                            <button class="buttonDownload">
                                                    <p class="text">
                                                    Descargar 
                                                    </p>
                                                    <div class="svg">
                                                        <svg xmlns="http://www.w3.org/2000/svg" fill="white" class="bi bi-download" viewBox="0 0 16 16"> <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"></path> <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"></path> </svg>
                                                    </div>
                                                </button>
                                    </a>
                                {{/.}}
                            {{/certificate}}
                        </td>
                    </tr>
                    {{/progressuserA}}
                </tbody>
            </table>
            <!-- Boton disparador de la modal -->
            <button type="button" class="btn btn-secondary btnAvances" style="background-color: #50565A; color:white;" data-toggle="modal"  data-target="#exampleModalLongavances"> Ver más</button>
            <br><br>
    
        </div>
    </div>
    <!-- Ventana modal -->
    <div class="modal fade" id="exampleModalLongavances" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document" style="min-width: 80%;">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Mis avances y calificaciones +</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <!-- Se agrega la Tabla de avances dentro de la ventana modal -->
                    <div class="modal-body modal-body-avances">
                        <p style="margin-top:1rem; margin-left:2rem; font-size: 2rem; text-align: left; color:#50565A"></p>
                        <br>
                        <table class="table tableAvances">
                            <tbody class="bodyTableAvances">
                                <tr>
                                    <td style="font-weight: bold;" class="col-3">Curso</td>
                                    <td style="font-weight: bold;" class="col-5">Avances</td>
                                    <td style="font-weight: bold;" class="col-1">Calificacion</td>
                                    <td style="font-weight: bold;" class="col-3">Certificados</td>
                                </tr>
                                {{#progressuser}}
                                <tr>
                                    <td scope="row">{{{ fullname }}}</td>
                                    <td>
                                        <center>            
                                            <div class="progress-circle" data-progress="{{{ percentage }}}">
                                        </center>
                                    </td>
                                    <td class="grade">{{{ grade }}}</td>
                                    <td>
                                        {{#certificate}}
                                            {{#.}}
                                            <a href="{{ . }}" target="_blank">
                                                <button class="buttonDownload">
                                                    <p class="text">
                                                    Descargar 
                                                    </p>
                                                    <div class="svg">
                                                        <svg xmlns="http://www.w3.org/2000/svg" fill="white" class="bi bi-download" viewBox="0 0 16 16"> <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"></path> <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"></path> </svg>
                                                    </div>
                                                </button>
                                            </a>
                                            {{/.}}
                                        {{/certificate}}
                                    </td>
                                </tr>
                                {{/progressuser}}
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                  </div>
                </div>
            </div>
    
    </div>
    </section>   
    <style>
        .containerCanvas {
        width: min-content;
        height: max-content;
        position: relative;
    }

    .numberPorcentaje {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 2rem;
    }

    #arco {
        transform: rotate(270deg);
    }
    .buttonDownload {
        padding: 0.5rem 1rem;
        border: none;
        outline: none;
        font-size: 1rem;
        border-radius: 0.4rem;
        font-weight: 600;
        background-color: #F38020;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: 0.4s ease-in-out;
    
    }

    .buttonDownload .text {
        transition: 0.4s ease-in-out;
        color: #fff;
        margin: 0;
    }

    .svg {
        transform: translateY(-20px) rotate(30deg);
        position: absolute;
        opacity: 0;
        margin: auto;
        left: 0;
        width: 1.5rem;
        transition: 0.4s ease-in-out;
        right: 0;
        bottom: 0;
        top: 0;
    }

    .buttonDownload:hover {
        background-color: #50565A;
    }

    .buttonDownload:hover .svg {
        transform: translateY(10px) rotate(0deg);
        opacity: 1;
    }

    .buttonDownload:hover .text {
        opacity: 0;
    }

    .buttonDownload:active {
        scale: 0.97;
    }

    .modal-body-avances{
        overflow: auto; 
    }

    @media(min-width: 768px){
        .modal-body-avances{
            overflow: hidden; 
        }
    }
    </style>